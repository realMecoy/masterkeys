---
import { Astronav, MenuItems, MenuIcon, StickyHeader } from "astro-navbar";
import Logo from "../assets/master-keys-logo.jpg";
---

<StickyHeader
  class="md:flex justify-center items-center p-6 h-20 bg-black text-white sticky top-0 z-20 transition-all navdiv"
  scrollY={50}
  defaultClass="py-2 border-transparent"
  activeClass="py-2 bg-black/80 border-gray-200 backdrop-blur-lg"
>
  <Astronav>
    <div class="flex w-full h-full justify-between items-center">
      <a href="/">
        <img
          src={Logo.src}
          loading="eager"
          alt="Company logo"
          width="100"
          height="100"
        /></a
      >
      <MenuIcon class="w-10 h-10 text-white md:hidden" />
    </div>
    <MenuItems class="hidden md:flex navbar">
      <ul
        class="flex flex-col items-center w-full py-8 bg-black relative top-0 md:top-0 z-30 md:bg-transparent md:flex-row gap-2"
      >
        <a
          class="px-48 py-6 md:p-3 hover:bg-blue-400 hover:text-slate-900 transform transition duration-300 rounded-md"
          href="/"
        >
          <li class="cursor-pointer md:p-3 flex items-center">Home</li>
        </a>
        <a
          class="px-48 py-6 md:p-3 hover:bg-blue-400 hover:text-slate-900 transform transition duration-300 rounded-md"
          href="/about"
        >
          <li class="cursor-pointer md:p-3 flex items-center">About</li>
        </a>
        <a
          class="px-48 py-6 md:p-3 hover:bg-blue-400 hover:text-slate-900 transform transition duration-300 rounded-md"
          href="/services"
        >
          <li class="cursor-pointer md:p-3 flex items-center">Services</li>
        </a>
        <a
          class="px-48 py-6 md:p-3 hover:bg-blue-400 hover:text-slate-900 transform transition duration-300 rounded-md"
          href="/contact"
        >
          <li class="cursor-pointer md:p-3 flex items-center">Contact</li>
        </a>

        <a
          class="px-48 py-6 md:p-3 hover:bg-blue-400 hover:text-slate-900 transform transition duration-300 rounded-md"
          href="/gallery"
        >
          <li class="cursor-pointer md:p-3 flex items-center">Gallery</li>
        </a>
      </ul>
    </MenuItems>
  </Astronav>
</StickyHeader>

<style>
  .active {
    border-bottom: rgb(96 165 250) 3px solid;
  }
  .navdiv {
    border-bottom: #fff 1px solid;
    z-index: 100;
  }
</style>

<script>
  const nav = document.querySelector(".navbar");
  const navLinks = nav.querySelectorAll("a");
  const currentURL = window.location.href;
  navLinks.forEach((link) => {
    if (link.href === currentURL) {
      link.classList.add("active");
    }
  });
</script>
